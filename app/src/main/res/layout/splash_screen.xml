<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fonkapli"
    android:orientation="vertical"
    android:textAlignment="center">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:gravity="center"
        android:text="ЗАРПЛАТА"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="70sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.1"
        android:text="МАЗ"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="150dp" />

    <TextView
        android:id="@+id/textView_copyring"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.55"
        android:text="copyring by:Пивовар Сергей"
        android:textAlignment="center"
        android:textColor="@color/mr_cast_meta_default_text_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView_version"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:src="@drawable/tt1333982788" />

</LinearLayout>